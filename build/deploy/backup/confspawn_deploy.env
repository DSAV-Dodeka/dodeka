# This .env file contains environment variables used during deployment

# The tag to upload to GHCR to
BACKUP_APP_IMAGE={{ backup.image_name }}
# Docker tag version
# RECOMMENDED TO WRAP
BACKUP_VERSION={{ confspawn_env.version }}

BARMAN_PASSWORD={{ confspawn_env.barman_password }}

# This is the directory that will be loaded as the Docker volume source for the container that will contain persisting
# data. Relative to the deploy.sh or an absolute path. Ensure proper permissions. The directory will be created if it
# does not already exist.
BACKUP_RESOURCES_SOURCE=$HOME{{ backup.resources_source }}
# This is the directory that the resources will be loaded into in the container
BACKUP_RESOURCES_TARGET={{ backup.resources_target }}
# This is the directory that will be used for recovery
BACKUP_RECOVER_TARGET={{ backup.recover_target }}
# The docker compose project name, influences the container name
BACKUP_COMPOSE_PROJECT_NAME={{ backup.project }}
NETWORK_NAME={{ main.docker_net_name }}
