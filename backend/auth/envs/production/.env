# Auth server settings for production environment

# Database configuration
FAROE_DB_PATH=./envs/production/db.sqlite

# Server configuration
FAROE_PORT=12870

# Port where the user server listens (on 127.0.0.2)
FAROE_USER_SERVER_PORT=12890

# Port for management commands (on 127.0.0.2)
FAROE_COMMAND_PORT=12871

# Session configuration
# FAROE_SESSION_EXPIRATION: Absolute expiration time for sessions (default: 2160h = 90 days)
# Examples: 720h (30 days), 2160h (90 days), 4320h (180 days)
# FAROE_SESSION_EXPIRATION=2160h

# CORS configuration
FAROE_CORS_ALLOW_ORIGIN=https://dsavdodeka.nl
